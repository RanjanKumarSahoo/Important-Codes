package com.orangehrm.qa.pages;



	import org.openqa.selenium.Keys;
	import org.openqa.selenium.WebDriver;
	import org.openqa.selenium.WebElement;
	import org.openqa.selenium.support.FindBy;
	import org.openqa.selenium.support.PageFactory;

	import com.orangehrm.qa.base.TestBase;

	import java.util.List;

	public class AddEmployeePage  extends TestBase{
		
		
		 @FindBy(partialLinkText = "Employee List")
		 WebElement employeeList;
		
	    @FindBy(className = "oxd-userdropdown-img")
	    WebElement profileImage;
	    
	    @FindBy(name = "firstName")
	    WebElement fName;
	    
	    @FindBy(name = "middleName")
	    WebElement mName;
	    
	    @FindBy(name = "lastName")
	    WebElement lName;
	    
	    @FindBy(className = "oxd-switch-input")
	    WebElement checkBox;
	    
	    @FindBy(className = "oxd-input")
	    public List<WebElement> inputFields;
	    
	    @FindBy(css = "[type=submit]")
	    WebElement submitBtn;
	    
	    @FindBy(className = "oxd-toast-container oxd-toast-container--bottom")
	    WebElement confirmMsg;

	    @FindBy(xpath = "//input[@placeholder='Type for hints...']")
	    List<WebElement> searchByName;
	    
	    @FindBy(className = "oxd-select-text-input")
	    List<WebElement> dropdowns;

	    @FindBy(className = "orangehrm-main-title")
	    public WebElement title;

	    @FindBy(className = "oxd-input-field-error-message")
	    public WebElement userNameErrorMessage;

	    public AddEmployeePage(){
	        PageFactory.initElements(driver, this);
	    }
	    
	    
	  
	    
	    public void addEmployee(String firstName,String middleName,  String lastName, String userName, String pass, String confirmPass){
	        checkBox.click();
	        fName.sendKeys(firstName);
	        mName.sendKeys(middleName);
	        lName.sendKeys(lastName);
	        inputFields.get(5).sendKeys(userName);
	        inputFields.get(6).sendKeys(pass);
	        inputFields.get(7).sendKeys(confirmPass);
	        submitBtn.click();
	    }
	    
	    public String successOrFailureMessage() {
	        return confirmMsg.getText();
	        
	    }
	    
	    public void clickOnEmployeeList() {
	    	employeeList.click();
	    }
	    
	    public void searchByName(String Name) {
	    searchByName.get(0).sendKeys(Name);	
	    submitBtn.click();
	    }

	    public void selectEmploymentStatus(WebDriver driver, int position) {
	        dropdowns.get(0).click();
	        for (int i = 0; i < position; i++) {
	            dropdowns.get(0).sendKeys(Keys.ARROW_DOWN);
	        }
	        dropdowns.get(0).sendKeys(Keys.ENTER);
	        submitBtn.click();
	    }

	    public void checkUserName(String userName) {
	        checkBox.click();
	        inputFields.get(5).sendKeys(userName);
	    }

	    public void findEmployee(String id) {
	        inputFields.get(1).sendKeys(id);
	        submitBtn.click();
	    }
	}


}
