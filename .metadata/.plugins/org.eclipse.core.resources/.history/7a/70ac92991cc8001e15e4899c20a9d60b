package Demo;

public class Demo1 {

	public static void main(String[] args) {
		int n=111470;
		int ecount=0;
		int ocount=0;
		while(n>0) {
			int rem=n%10;
			if(rem%2==0) {
				ecount++;
			}else {
				ocount++;
			}
			n=n/10;
		}
		System.out.println(ecount);
		System.out.println(ocount);
	}
}
