package Programming;

public class Demo {
	    public static void main(String[] args) {
	        String str = "Hello Hello";
	        char targetChar = 'l';

	        int count = countCharacter(str, targetChar);
	        System.out.println("The character '" + targetChar + "' appears in the string '" + str + "' " + count + " times.");
	    }

	    private static int countCharacter(String inputString, char targetChar) {
	        int count = 0;

	        for (int i = 0; i < inputString.length(); i++) {
	            if (inputString.charAt(i) == targetChar) {
	                count++;
	            }
	        }

	        return count;
	    }
	}


